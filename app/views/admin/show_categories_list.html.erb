<h2>Kategorie (<%=h @categories.total_entries %>)</h2>

<%= link_to 'Utwórz kategorie', new_category_path %>

<div align="right">
  <%= will_paginate @categories, :prev_label => "Poprzednia", :next_label => "Następna" %>
</div>
<table class="table-list" id="table-users">
	<tr>
		<th style="width:50px;"></th>
		<th style="width:50px;">Marker</th>
		<th style="width:100px;"><%= user_sortable 'name', "Nazwa" %></th>
		<th style="width:100px;"><%= user_sortable 'created_at', "Data utworzenia" %></th>
		<th style="width:100px;">Akcje</th>
	</tr>
	<% @categories.each do |category| %>
					
		<tr id="user-<%= category.id %>">
			<td><%= category.id %></td>
			<td>
				<% if not category.marker.url.nil? %>
					<%= image_tag(category.marker.url) %>
				<% else %>
					Brak grafiki
				<% end %>
			</td>
			<td><%=h category.name %></td>
			<td><%= category.created_at %></td>
			<td>
				<%= link_to 'Edycja', edit_category_path(category) %>
			</td>
		</tr>
	
	<% end %>
</table>
<div align="right">
  <%= will_paginate @categories, :prev_label => "Poprzednia", :next_label => "Następna" %>
</div>
