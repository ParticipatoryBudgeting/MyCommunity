<% form_tag :controller => :admin, :action => :login do -%>
	<fieldset>
		<legend>Administração</legend>
		<p>
			<%= label_tag 'Usuário:' %><br />
			<%= text_field_tag :username %>
		</p>
		<p>
			<%= label_tag 'Senha:' %><br />
			<%= password_field_tag :password %>
		</p>
		<p>
			<%= submit_tag 'Entrar' %>
		</p>
	</fieldset>
<% end -%>
