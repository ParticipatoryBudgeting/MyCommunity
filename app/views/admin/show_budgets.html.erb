<h2>Lista projektów (<%=h @budgets2.empty? ? "Brak projektów" : @budgets2.size %>)</h2>

<% form_tag show_budgets_path, :method => :get do %>
	<%= label_tag "Autor" %>
	<%= text_field_tag (:author, params[:author], :size => 18) %>
	<%= label_tag "Nazwa" %>
	<%= text_field_tag (:name, params[:name], :size => 18) %>
	<%= label_tag "Typ" %>
	<%= text_field_tag (:type, params[:type], :size => 18) %>

	<%= submit_tag 'Filtruj' %>
<% end %>
<br/>

<% unless @budgets2.empty? %><span class="break"><a href= "/reports/budgets.csv">(Eksport do Excela)</a></span><% end %>


