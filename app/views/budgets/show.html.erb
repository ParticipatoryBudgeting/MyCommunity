<% require 'open-uri' %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="pl-PL" xmlns:fb="http://ogp.me/ns/fb#">
  <head>
    <title><%= @budget.name %> | mapy.budżet-partycypacyjny.pl</title>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <meta http-equiv="content-type" content="application/xhtml+xml; charset=utf-8" />
    <meta name="distribution" content="global" />
    <meta name="language" content="pl-PL" />
    <meta name="robots" content="follow, all" />
    <meta name="description" content="<%= @budget.name %>" />
    <meta name="keywords" content="" />
    <meta property="og:title" content="<%= @budget.name %>" />
    <meta property="og:image" content="<%= root_url %>img/logo.png" />
    <meta property="og:site_name" content="mapy.budzet-partycypacyjny.pl" />
    <meta property="fb:admins" content="100002180867119" />
    <link rel="author" href="" title="" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <%= stylesheet_link_tag('modal') %>
    <%= stylesheet_link_tag('jquery.jscrollpane') %>
    <%= stylesheet_link_tag('screen') %> <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <%= javascript_include_tag('jquery-1.4.2.min') %>
    <%= javascript_include_tag('jquery.mousewheel') %>
    <%= javascript_include_tag('mwheelIntent') %>
    <%= javascript_include_tag('jquery.jscrollpane.min') %>
    <%= javascript_include_tag('jsii-1.0.0') %>
    <%= javascript_include_tag('jquery.jmpopups-0.5.1') %>
    <%= javascript_include_tag('jquery.twitter') %>
    <%= javascript_include_tag('jquery-ui-1.8.11.custom.min') %>
    <%= javascript_include_tag('jquery.cookie.js') %>
    <%= javascript_include_tag('modal') %>
    <%= javascript_include_tag('maps') %>
    <%= javascript_include_tag "ckeditor/ckeditor.js"%>

</head>
<body class="internal">
  <div id="inner">
    <div id="maps">
      <div class="link-screenlocker" onclick="goToMap()"></div>
      <div id="mdlCausa2" class="blue-container budget-view">
      <div class="header">
        <a href="/" class="close-button">close</a>
      </div>
      <div class="content">
        <div class="ctm">
          <div class="mdlPin">
            <!-- -->
          </div>
          <!-- <h2>test</h2> -->
          <div class="ctl">
            <!-- -->
          </div>
          <div class="ctr">
            <!-- -->
          </div>
        </div>
        <div class="cml">
          <div class="cmr">
            <div class="cmm">
              <div class="mdlIn causa" id="mdlInCausa">
                <div class="left-tab">
                  <div class="boxAutor">
                    <div class="ttls">
                      <h3><%= @budget.type %> - <%= @budget.name %></h3>
                    </div>
                  </div>
                  <div class="fl w220 details">
                    <span>Data utworzenia: <strong><%= @budget.creation_date %></strong></span>
                    <span>Data rozpoczęcia: <strong><%= @budget.from %></strong></span>
                    <span>Data zakończenia: <strong><%= @budget.to %></strong> </span>
                  </div>
                  <div class="center-tab details">
                    Kwota budżetu<br />
                    <span class="cost"><%= @budget.value %></span>
                  </div>
                  <div class="w500 details two-columns">
                    <div class="w250 fl">
                      <strong>liczba osób biorących udział</strong> <br />
                      <%= @budget.participants_count %>
                     </div>
                    <div class="w250 fl">
                      <strong>liczba zgłoszonych projektów</strong> <br />
                      0
                    </div>
                  </div>

                  <span class="w500 dotted-line"></span>
                  <div class="w500">
                    <span class="label">Z jakim wyprzedzeniem zaczęto wprowadzanie budżetu</span>
                    <p>0</p>
                  </div>

                  <span class="w500 dotted-line"></span>
                  <div class="w500">
                    <span class="label">W jaki sposób mieszkańcy podejmowali decyzję?</span>
                    <p><%= @budget.decision %></p>
                  </div>

                  <span class="w500 dotted-line"></span>
                  <div class="w500">
                    <span class="label">W jaki sposób przeprowadzono ewaluację projektu?</span>
                    <p><%= @budget.evaluation %></p>
                  </div>

                  <span class="w500 dotted-line"></span>
                  <div class="w500">
                    <span class="label">Kto był inicjatorem wprowadzenia?</span>
                    <p><%= @budget.initiator %></p>
                  </div>

                  <span class="w500 dotted-line"></span>
                  <div class="w500">
                    <span class="label">Dlaczego zdecydowano się na wprowadzenie?</span>
                    <p><%= @budget.reason %></p>
                  </div>

                  <span class="w500 dotted-line"></span>
                  <div class="w500">
                    <span class="label">Rekomendacja wprowadzenia budżetu partycypacyjnego</span>
                    <p><%= @budget.recomendation %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="footer">
          <!--  -->
        </div>
    </div>
    <%= render :partial => '/application/top' %>
    <%= render :partial => 'left2', :cause => @cause%>
    <%= render :partial => '/application/footer' %> <span class="break"><!--  --></span>
    </div>

  </body>
</html>
