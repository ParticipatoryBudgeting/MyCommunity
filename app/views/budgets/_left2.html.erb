<div id="left">

  <div id="bgLogo">
    <h1><a href="/" id="logo"><img src="/images/logo-sb.png" /></a></h1>
  </div>
  
  <div id="boxLeft">
    <div class="content">
      <h2>Lista projektów</h2>
      <ul id="side_causes" style="font-size:12px;font-weight:normal;">
        <% @causes.each do |cause| %>
          <li><%= link_to cause.title, show_cause_path(cause.category, cause.title, cause.id) %></li>
        <% end %>
      </ul>
      <%= will_paginate @causes, :prev_label => "Poprzednia", :next_label => "Następna" %>
    </div>
  </div>

</div>
<style type="text/css">
  #boxLeft {z-index:9999; height: 836px;}
</style>
