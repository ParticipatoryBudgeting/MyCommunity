<script type="text/javascript">
  links = new Array("http://www.eucurtoeucuido.com.br/","http://www.parceirosvoluntarios.org.br/","http://www.unisinos.br/", "http://www.portoalegre.rs.gov.br/");  
  
  imagemAtual = 0;
  numImagens = links.length;
  
  function cicloImagens(){
      imagemAnterior = imagemAtual;
      imagemAtual++;
      if (imagemAtual == numImagens) {
          imagemAtual = 0;
      }
      jQuery("#left_banner" + imagemAnterior.toString()).hide();
      jQuery("#left a.logo-unisinos").attr("href", links[imagemAtual]);
      jQuery("#left_banner" + imagemAtual.toString()).fadeIn(800);
      
      setTimeout("cicloImagens()", 3 * 1000);
  }
  jQuery(document).ready(function() {
    cicloImagens();
  });
</script>
