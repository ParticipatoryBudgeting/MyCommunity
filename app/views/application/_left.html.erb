 <script type="text/javascript">
  links = [];
  
  imagemAtual = 0;
  numImagens = links.length;
  
  function cicloImagens(){
      imagemAnterior = imagemAtual;
      imagemAtual++;
      if (imagemAtual == numImagens) {
          imagemAtual = 0;
      }
      jQuery("#left_banner" + imagemAnterior.toString()).hide();
      jQuery("#left a.logo-unisinos").attr("href", links[imagemAtual]);
      jQuery("#left_banner" + imagemAtual.toString()).fadeIn(800);
      
      setTimeout("cicloImagens()", 3 * 1000);
  }

  function filter_by_budget_change() {
    var budget_id = $("#budget_budget_id").val();
    var budget_locked = parseInt($("#budget_budget_id option[value='" + budget_id + "']").attr('data-locked'));
    var budget_city = $("#budget_budget_id option[value='" + budget_id + "']").attr('data-city')

    // update projects
    map.budgetize(budget_id);

    // update project creation button
    var $addproject = $('#createCauseButton');
    if (budget_locked || budget_id == 0) {
      $addproject.addClass('locked');
      if ($('#boxLeft .content .hint').size() == 0)
        $('#boxLeft .content').append("<div class='hint'>Tworzenie projektów dla wybranego budżetu zostało zablokowane.</div>")
    }
    else {
      $addproject.removeClass('locked');
      $('#boxLeft .hint').remove();
    }

    // update district filter
    if (budget_city != '') {
      $("#comboDistricts .comboLst > li[data-city='" + budget_city + "']" ).show();
      $("#comboDistricts .comboLst > li[data-city!='" + budget_city + "']" ).hide();
    }
    else {
      $(".comboLst > li").show();
    }
    $('.scroll-pane').jScrollPane();

    // update project info and links
    $('#budget_details').remove();
    if (budget_id > 0)
      $('#boxLeft .content').append("<a id='budget_details' href='/budgets/" + budget_id + "'>Informacje o budżecie</a>");

  }

  jQuery(document).ready(function() {
    cicloImagens();
    $("#budget_budget_id").select2();
    $("#budget_budget_id").bind("change", filter_by_budget_change);
  });
</script
